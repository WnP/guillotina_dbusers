{
	"methods": {
		"POST": "plone.server.interfaces.IPOST"
	},
	"layer": "pserver.zodbusers.interfaces.IZODBUsersLayer",
	"contenttypes": {
		"pserver.zodbusers.content.users.IUserManager": {
			"POST": {
        "factory": "plone.server.api.content.DefaultPOST",
				"permission": "plone.AddUser"
      }
    },
		"pserver.zodbusers.content.groups.IGroupManager": {
			"POST": {
        "factory": "plone.server.api.content.DefaultPOST",
        "permission": "plone.AddGroup"
      }
    },
		"plone.server.interfaces.ISite": {
      "endpoints": {
        "@login": {
          "POST": {
            "factory": "pserver.zodbusers.services.auth.Login",
            "permission": "plone.AccessContent"
          }
        },
				"@refresh_token": {
          "POST": {
            "factory": "pserver.zodbusers.services.auth.Refresh",
            "permission": "plone.AccessContent"
          }
        }
			}
		}
	}
}
